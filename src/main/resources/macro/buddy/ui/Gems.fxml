<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="macro.buddy.ui.GemsController">
	<top>
		<HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
			<Label text="Exile Buddy" minWidth="175" id="title"/>
			<Separator HBox.hgrow="ALWAYS" visible="false"/>
			<VBox alignment="CENTER" spacing="5.0">
				<ComboBox fx:id="buildCombo" maxWidth="1.7976931348623157E308" onAction="#buildSelection"
				          promptText="Build" visibleRowCount="5"/>
				<HBox alignment="CENTER" spacing="5.0">
					<TextField fx:id="buildName" promptText="Name" HBox.hgrow="ALWAYS"/>
					<ComboBox fx:id="classCombo" onAction="#classSelection" promptText="Class" visibleRowCount="5"/>
					<ComboBox fx:id="ascendencyCombo" disable="true" onAction="#ascendencySelection"
					          promptText="Ascendency" visibleRowCount="5"/>
					<Button minWidth="100" mnemonicParsing="false" onAction="#addBuild" text="Add Build"/>
				</HBox>
			</VBox>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
			</BorderPane.margin>
		</HBox>
	</top>
	<center>
		<ScrollPane>
			<content>
				<VBox fx:id="buildGems" alignment="TOP_CENTER" spacing="5.0"/>
			</content>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
			</BorderPane.margin>
		</ScrollPane>
	</center>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
	</padding>
</BorderPane>
